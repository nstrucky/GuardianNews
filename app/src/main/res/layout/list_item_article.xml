<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What a Great Title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_menu_camera" />


            <TextView
                android:id="@+id/textView_publicationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-01"
                android:textStyle="normal|italic" />


        </LinearLayout>


        <TextView
            android:id="@+id/textView_article_body"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:text="This is some text, here is some more text, I'm going to write a bunch of text until I can't write it anymore, thank you please your're welcome"
            android:textColor="@android:color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView_byline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="normal|italic" />

            <ImageView
                android:id="@+id/imageView_bylineImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bylineimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_bio"
                android:text="Bio Text stuff and stuff woohoo!"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imageView_article_thumbnail"
                android:layout_width="208dp"
                android:layout_height="125dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/dummy_thumbnail_500_300" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>